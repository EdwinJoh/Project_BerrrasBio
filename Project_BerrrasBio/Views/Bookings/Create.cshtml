@model Project_BerrrasBio.Models.Booking
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShowId" class="control-label"></label>
                <td>
                    @Html.DisplayFor(c => c.ShowId)
                    <input asp-for="ShowId" class="control-label" value="@Model.ShowId" hidden />
                </td>

            </div>
            <div class="form-group">
                <label asp-for="NumOfSeats" class="control-label"></label>
                <input asp-for="NumOfSeats" class="form-control" />
                <span asp-validation-for="NumOfSeats" class="text-danger"></span>
            </div>
              <div class="form-group">
                @*<label asp-for="" class="control-label"></label>*@
                <td>
                   Price per ticket: @Html.DisplayFor(c => c.TotalPrice)
                    <input asp-for="TotalPrice" class="control-label" value="@Model.TotalPrice" hidden />
                </td>

            </div>
            <div class="form-group">
                <input type="submit" asp-route-price=@Model.TotalPrice value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
